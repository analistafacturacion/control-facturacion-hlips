# Variables para Railway - Backend
PORT=3001
NODE_ENV=production

# Base de datos PostgreSQL (Railway las proporcionará automáticamente)
DATABASE_URL=${{Postgres.DATABASE_URL}}
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_USERNAME=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_NAME=${{Postgres.PGDATABASE}}

# JWT Secret (cambiar en producción)
JWT_SECRET=tu-jwt-secret-super-seguro-para-produccion-2024

# Credenciales Pergamo (configurar según tus datos reales)
PERGAMO_USER=tu-usuario-pergamo@correo.com
PERGAMO_PASS=tu-contraseña-pergamo

# CORS Origin (Railway URL se asignará automáticamente)
FRONTEND_URL=${{Frontend.RAILWAY_STATIC_URL}}
